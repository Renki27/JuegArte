<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_gameModes"
    tools:context="com.dam.juegarte.GameModeMenu"
    android:background="@drawable/background_default">



    <Button
        android:id="@+id/btn_game_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="40dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_yellow"
        android:fontFamily="@font/montserrat_bold"
        android:onClick="onClick"
        android:text="@string/game_mode_name"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_game_2"
        android:layout_below="@id/btn_game_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_yellow"
        android:fontFamily="@font/montserrat_bold"
        android:onClick="onClick"
        android:text="@string/game_mode_name"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_game_3"
        android:layout_below="@id/btn_game_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_yellow"
        android:fontFamily="@font/montserrat_bold"
        android:onClick="onClick"
        android:text="@string/game_mode_name"
        android:textColor="@color/white"
        android:textSize="16sp" />


</RelativeLayout>