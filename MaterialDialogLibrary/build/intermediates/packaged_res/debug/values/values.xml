<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="material_dialog_background">@android:color/white</color>
    <color name="material_dialog_message_text_color">@android:color/secondary_text_light</color>
    <color name="material_dialog_negative_button_text_color">#1E88E5</color>
    <color name="material_dialog_neutral_button_color">?android:colorAccent</color>
    <color name="material_dialog_neutral_button_text_color">?android:colorAccent</color>
    <color name="material_dialog_positive_button_color">?android:colorAccent</color>
    <color name="material_dialog_positive_button_text_color">?android:colorAccent</color>
    <color name="material_dialog_title_text_color">@android:color/primary_text_light</color>
    <dimen name="paddingTop">16dp</dimen>
    <dimen name="radiusTop">16dp</dimen>
    <dimen name="text_message_size">14sp</dimen>
    <dimen name="text_title_size">16sp</dimen>
    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_back</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
    </style>
    <style name="MaterialDialog">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="MaterialDialog.Message">
        <item name="android:textSize">@dimen/text_message_size</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/material_dialog_message_text_color</item>
    </style>
    <style name="MaterialDialog.NegativeButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:layout_margin">4dp</item>
        <item name="android:letterSpacing" ns1:targetApi="lollipop">0.025</item>
        <item name="android:textAllCaps">false</item>

    </style>
    <style name="MaterialDialog.NeutralButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="android:layout_margin">4dp</item>
        <item name="android:letterSpacing" ns1:targetApi="lollipop">0.025</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="MaterialDialog.PositiveButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="android:layout_margin">4dp</item>
        <item name="android:letterSpacing" ns1:targetApi="lollipop">0.025</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="MaterialDialog.Title">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/material_dialog_title_text_color</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <style name="Theme.MaterialDialog" parent="Theme.MaterialComponents.Light">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <declare-styleable name="MaterialDialog">
        <attr format="color|reference" name="material_dialog_background"/>

        <attr format="color|reference" name="material_dialog_title_text_color"/>
        <attr format="color|reference" name="material_dialog_message_text_color"/>

        <attr format="color|reference" name="material_dialog_positive_button_text_color"/>
        <attr format="color|reference" name="material_dialog_positive_button_color"/>

        <attr format="color|reference" name="material_dialog_neutral_button_text_color"/>
        <attr format="color|reference" name="material_dialog_neutral_button_color"/>

        <attr format="color|reference" name="material_dialog_negative_button_text_color"/>
    </declare-styleable>
</resources>